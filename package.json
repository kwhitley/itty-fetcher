{
  "name": "itty-fetcher",
  "version": "0.8.1-next.7",
  "description": "Tiny wrapper around native fetch to remove boilerplate from your own API fetching code.",
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./fetcher": {
      "import": "./fetcher.mjs",
      "require": "./fetcher.js",
      "types": "./fetcher.d.ts"
    },
    "./StatusError": {
      "import": "./StatusError.mjs",
      "require": "./StatusError.js",
      "types": "./StatusError.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "vitest --coverage --reporter verbose",
    "test:once": "vitest run",
    "dev": "run-p dev:lint test",
    "dev:lint": "onchange -ik 'src/**/*.ts' -- yarn lint",
    "coverage": "vitest run --coverage",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "format": "prettier src --write src",
    "verify": "echo 'verifying module...' && yarn build && yarn test:once",
    "prerelease": "yarn verify",
    "prerelease:next": "yarn verify",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "rollup -c",
    "release": "release --tag --push --patch --src=dist",
    "release:next": "release --tag --push --type=next --src=dist"
  },
  "keywords": [
    "fetch",
    "api",
    "helper",
    "tiny",
    "json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwhitley/itty-fetcher.git"
  },
  "author": "Kevin R. Whitley <krwhitley@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwhitley/itty-fetcher/issues"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitest/coverage-v8": "^0.34.3",
    "coveralls": "^3.1.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "fetch-mock": "^9.11.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "22.1.0",
    "node-fetch": "=2.6.7",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-copy": "^3.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uglify-js": "^3.17.4",
    "vitest": "0.34.3",
    "yarn": "^1.22.19",
    "yarn-release": "^1.10.6"
  }
}
